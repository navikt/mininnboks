<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>no.nav.sbl.dialogarena</groupId>
        <artifactId>dialogarena</artifactId>
        <version>1.5.2</version>
    </parent>

    <name>Dialogarena - minehenvendelser</name>
    <artifactId>minehenvendelser</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>config</module>
        <module>web</module>
        <module>jee</module>
    </modules>

    <properties>
        <args4j.version>2.0.23</args4j.version>
        <commons.lang3.version>3.1</commons.lang3.version>
        <commons.io.version>2.4</commons.io.version>
        <collections.generic.version>4.01</collections.generic.version>
        <cxf.version>2.7.6</cxf.version>
        <ehcache.core.version>2.6.5</ehcache.core.version>
        <fitnesse.version>20121220</fitnesse.version>
        <hamcrest.version>1.3</hamcrest.version>
        <jaxb2.basics.runtime.version>0.6.4</jaxb2.basics.runtime.version>
        <joda.time.version>2.2</joda.time.version>
        <junit.version>4.11</junit.version>
        <junit.dep.version>4.10</junit.dep.version>
        <jsoup.version>1.7.2</jsoup.version>
        <mockito.core.version>1.9.5</mockito.core.version>
        <modig-core.version>1.0.0</modig-core.version>
        <modig-content.version>1.2.1</modig-content.version>
        <modig.fitnesse.version>1.0.1</modig.fitnesse.version>
        <modig.frontend.version>1.0.33</modig.frontend.version>
        <modig.lang.version>1.0.1</modig.lang.version>
        <modig-security.version>1.0.9</modig-security.version>
        <modig.wicket.test.version>1.0.0</modig.wicket.test.version>
        <modig.wicket.version>1.0.19</modig.wicket.version>
        <nav.sbl.commons.version>3.19</nav.sbl.commons.version>
        <nav.sbl.felles.commons.security.version>3.24</nav.sbl.felles.commons.security.version>
        <reflections.version>0.9.8</reflections.version>
        <servlet.api.version>3.0.1</servlet.api.version>
        <slf4j.version>1.7.5</slf4j.version>
        <spring.version>3.2.3.RELEASE</spring.version>
        <spring.security.version>3.1.0.RELEASE</spring.security.version>
        <webbit.version>0.4.14</webbit.version>
        <wicket.version>6.8.0</wicket.version>
        <dialogarena.cms.url>http://e32apvl026.oera-t.local:8080</dialogarena.cms.url>
        <henvendelse.tjenestespesifikasjon.version.1>2.0.0</henvendelse.tjenestespesifikasjon.version.1>
        <sakogbehandling.jaxws.version>1.0.0</sakogbehandling.jaxws.version>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.cxf</groupId>
                    <artifactId>cxf-codegen-plugin</artifactId>
                    <version>2.4.9</version>
                </plugin>

                <plugin>
                    <groupId>no.nav.maven.plugins</groupId>
                    <artifactId>jboss-maven-plugin</artifactId>
                    <version>3.3.4</version>
                </plugin>
                <plugin>
                    <groupId>no.nav.maven.plugins</groupId>
                    <artifactId>modig-scm-plugin</artifactId>
                    <version>1.1.9</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>no.nav.maven.plugins</groupId>
                <artifactId>modig-scm-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Check illegal or unwanted dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>failon-unwanted-dependencies</goal>
                            <goal>report-unapproved-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jacoco-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <propertyName>jacoco.agent.argLine</propertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jacoco-report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>no.nav.modig</groupId>
                <artifactId>modig-content-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <propertiesFilesRoot>${project.basedir}/web/src/main/resources/content</propertiesFilesRoot>
                    <propertiesFiler>
                        <nb>innholdstekster_nb.properties</nb>
                        <nb>sbl-webkomponenter_nb.properties</nb>
                    </propertiesFiler>
                    <menyPunktPaths>
                        <nb>${dialogarena.cms.url}/site/16/minehenvendelser/nb/tekster</nb>
                        <nb>${dialogarena.cms.url}/site/16/sbl-webkomponenter/nb/tekster</nb>
                    </menyPunktPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>enforce-dependency</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <fail>false</fail>
                            <rules>
                                <DependencyConvergence/>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <scm>
        <developerConnection>scm:git:ssh://git@a34apvl029.devillo.no:7999/dial/minehenvendelser.git</developerConnection>
        <url>http://a34apvl029.devillo.no:7990/projects/DIAL/repos/minehenvendelser/browse</url>
		<tag>HEAD</tag>
	</scm>

    <reporting>
        <plugins>
            <plugin>
                <groupId>no.nav.maven.plugins</groupId>
                <artifactId>modig-scm-plugin</artifactId>
                <version>1.1.9</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>generate-jira-changes</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>maven-surefire-plugin</artifactId>
                            <configuration>
                                <argLine>${jacoco.agent.argLine}</argLine>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>

        </profile>
        <profile>
            <id>sonar</id>
            <activation>
                <property>
                    <name>sonar.host.url</name>
                </property>
            </activation>
            <properties>
                <sonar.jacoco.excludes>*SelfTestPage.*</sonar.jacoco.excludes>
            </properties>
        </profile>
    </profiles>
</project>
