<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>no.nav.sbl</groupId>
        <artifactId>mor-pom</artifactId>
        <version>3.2</version>
    </parent>

    <name>Dialogarena - mininnboks</name>
    <groupId>no.nav.sbl.dialogarena</groupId>
    <artifactId>mininnboks</artifactId>
    <version>5.7-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>config</module>
        <module>web</module>
        <module>jee</module>
    </modules>

    <properties>
        <sonar.exclusions>
            **/config/**,
            **/servlet/**,
            **/DateTimeObjectMapperProvider.java,
            **/RestConfig.java
        </sonar.exclusions>

        <ehcache.version>2.6.11</ehcache.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.sf.ehcache</groupId>
                <artifactId>ehcache-core</artifactId>
                <version>${ehcache.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>no.nav.maven.plugins</groupId>
                    <artifactId>modig-scm-plugin</artifactId>
                    <version>1.1.10</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>no.nav.maven.plugins</groupId>
                <artifactId>modig-scm-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Check illegal or unwanted dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>failon-unwanted-dependencies</goal>
                            <goal>report-unapproved-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>no.nav.modig</groupId>
                <artifactId>modig-content-maven-plugin</artifactId>
                <version>2.1.0</version>
                <configuration>
                    <propertiesFilesRoot>${project.basedir}/web/src/main/resources/content</propertiesFilesRoot>
                    <propertiesFiler>
                        <mininnboksnb>mininnboks_nb_NO.properties</mininnboksnb>
                    </propertiesFiler>
                    <menyPunktUrler>
                        <mininnboksnb>/site/18/app/mininnboks/nb/tekster</mininnboksnb>
                    </menyPunktUrler>
                </configuration>
            </plugin>
        </plugins>

    </build>

    <scm>
        <developerConnection>scm:git:http://stash.devillo.no/scm/sbl/mininnboks.git</developerConnection>
        <url>http://stash.devillo.no:7990/projects/SBL/repos/mininnboks/browse</url>
		<tag>HEAD</tag>
	</scm>

    <reporting>
        <plugins>
            <plugin>
                <groupId>no.nav.maven.plugins</groupId>
                <artifactId>modig-scm-plugin</artifactId>
                <version>1.1.9</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>generate-jira-changes</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>

</project>
