<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>mininnboks</display-name>

    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <name>MININNBOKS_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- sikrer at man kan benytte servlet-loginmodules -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>All pages</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.sbl.dialogarena.mininnboks.config.ApplicationConfig</param-value>
    </context-param>

    <filter>
        <filter-name>HttpSessionSecurityIntegrationFilter</filter-name>
        <filter-class>no.nav.modig.security.filter.OpenAMLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HttpSessionSecurityIntegrationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RedirectFilter</filter-name>
        <filter-class>no.nav.sbl.dialogarena.mininnboks.provider.filter.RedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RedirectFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>decoratorFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>decoratorFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>xframeoptions</filter-name>
        <filter-class>no.nav.sbl.dialogarena.common.web.security.XFrameOptionsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xframeoptions</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MDCFilter</filter-name>
        <filter-class>no.nav.modig.presentation.logging.session.MDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>xsrf</filter-name>
        <filter-class>no.nav.sbl.dialogarena.mininnboks.provider.filter.XsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xsrf</filter-name>
        <servlet-name>restservlet</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>selftest</servlet-name>
        <servlet-class>no.nav.sbl.dialogarena.mininnboks.servlet.SelfTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest</servlet-name>
        <url-pattern>/internal/selftest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>selftest-json</servlet-name>
        <servlet-class>no.nav.sbl.dialogarena.mininnboks.servlet.SelfTestJsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest-json</servlet-name>
        <url-pattern>/internal/selftest.json</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>isAlive</servlet-name>
        <servlet-class>no.nav.sbl.dialogarena.mininnboks.servlet.IsAliveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isAlive</servlet-name>
        <url-pattern>/internal/isAlive</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>refreshEnonicServlet</servlet-name>
        <servlet-class>org.springframework.web.context.support.HttpRequestHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refreshEnonicServlet</servlet-name>
        <url-pattern>/internal/refreshenonic</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restservlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>no.nav.sbl.dialogarena.mininnboks.provider.rest.RestConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>restservlet</servlet-name>
        <url-pattern>/tjenester/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reactapp</servlet-name>
        <servlet-class>no.nav.sbl.dialogarena.mininnboks.servlet.ApplicationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reactapp</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/app/index.html</location>
    </error-page>

</web-app>
